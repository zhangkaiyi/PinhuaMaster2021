@page
@model PinhuaMaster.Pages.Finance.Payment.CreateModel
@{
    ViewData["Title"] = "付款填报";
}

<div class="row">
    <div class="col-sm-9">
        <form method="post">
            <div class="box box-solid" id="formBox">
                <div class="box-body form-horizontal">
                    @*<div class="form-group">
                            <label for="付款单号">单号</label>
                            <input type="text" class="form-control" id="付款单号" name="@Html.NameFor(x=>x.付款单号)" placeholder="OrderId">
                        </div>*@
                    <div class="form-group">
                        <label class="control-label col-xs-3 col-md-2" for="单位编号">付款单位</label>
                        <div class="col-xs-9 col-md-10">
                            <select class="form-control" id="单位编号" asp-for="Payment.单位编号" asp-items="Model.CustomerSelectList"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3 col-md-2" for="付款类型">付款类型</label>
                        <div class="col-xs-9 col-md-10">
                            <select class="form-control" id="付款类型" asp-for="Payment.付款类型" asp-items="Model.PaymentTypeSelectList"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3 col-md-2" for="付款日期">日期</label>
                        <div class="col-xs-9 col-md-10">
                            <input type="text" class="form-control" id="付款日期" asp-for="Payment.付款日期" value="@DateTime.Now.ToString("yyyy-MM-dd")" data-provide="datepicker"
                                   data-date-format="yyyy-mm-dd" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3 col-md-2" for="付款金额">付款金额</label>
                        <div class="col-xs-9 col-md-10">
                            <input type="number" class="form-control" id="付款金额" asp-for="Payment.付款金额" placeholder="输入金额...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-3 col-md-2" for="备注">备注</label>
                        <div class="col-xs-9 col-md-10">
                            <input type="text" class="form-control" id="备注" asp-for="Payment.备注" placeholder="输入备注...">
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="row no-print">
                        <div class="col-xs-12">
                            <a href="invoice-print.html" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> 打印</a>
                            <button type="submit" class="btn btn-primary pull-right">
                                <i class="fa fa-check"></i> 确认提交
                            </button>
                            <a asp-page="Index" class="btn btn-default pull-right" style="margin-right: 5px;">
                                <i class="fa fa-reply"></i> 取消
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
