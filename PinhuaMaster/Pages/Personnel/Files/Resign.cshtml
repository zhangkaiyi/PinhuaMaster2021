@page "{id}"
@model PinhuaMaster.Pages.Personnel.Files.ResignModel
@{
    ViewData["Title"] = "离职";
}

<div clcass="row">
    <div class="col-md-8">
        <form method="post">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-xs-3" asp-for="PersonnelFile.Id"></label>
                            <div class="col-xs-9">
                                <div class="input-group">
                                    <input asp-for="PersonnelFile.Id" class="form-control" readonly />
                                    <div class="input-group-addon no-padding"><i class="fa fa-info" style="width: 38px;"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-3" asp-for="PersonnelFile.Name"></label>
                            <div class="col-xs-9">
                                <div class="input-group">
                                    <input asp-for="PersonnelFile.Name" class="form-control" readonly />
                                    <div class="input-group-addon no-padding"><i class="fa fa-info" style="width: 38px;"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-3" asp-for="PersonnelFile.ReasonOfLeave"></label>
                            <div class="col-xs-9">
                                <div class="input-group">
                                    <input asp-for="PersonnelFile.ReasonOfLeave" class="form-control" />
                                    <div class="input-group-addon no-padding"><i class="fa fa-info" style="width: 38px;"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-3" asp-for="PersonnelFile.InServiceEnd"></label>
                            <div class="col-xs-9">
                                <div class="input-group">
                                    <input asp-for="PersonnelFile.InServiceEnd" type="text" value="@Model?.PersonnelFile?.InServiceEnd?.ToString("yyyy-MM-dd")" class="form-control" readonly data-provide="datepicker" data-date-format="yyyy-mm-dd" />
                                    <div class="input-group-addon no-padding"><i class="fa fa-info" style="width: 38px;"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a asp-page="Index" class="btn btn-default btn-flat"><i class="fa fa-reply"></i> 返回</a>
                    <button type="submit" class="btn btn-danger btn-flat pull-right"><i class="fa fa-check"></i> 确认</button>
                </div>
            </div>
        </form>
    </div>
</div>

