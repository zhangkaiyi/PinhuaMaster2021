@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "登陆";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - PinhuaMaster</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/lib/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/AdminLTE-2.4.3/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/lib/AdminLTE-2.4.3/plugins/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        body, button, input, select, textarea, h1, h2, h3, h4, h5, h6 {
            font-family: Helvetica, Tahoma, Arial, STXihei, "华文细黑", Heiti, "Microsoft YaHei", "微软雅黑", "黑体", SimSun, "宋体", sans-serif
        }

        body {
            font-size: 13px;
            display:none;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a asp-page="/Index"><b>Pinhua</b>Master</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">登陆并开始您的会话</p>

            <form method="post">
                <div class="form-group has-feedback">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="邮箱">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input asp-for="Input.RememberMe" type="checkbox"> 记住我
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登陆</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center">
                <p>- 其他 -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> 使用 Facebook 帐户登陆
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus"></i> 使用 Google+ 帐户登陆
                </a>
            </div>
            <!-- /.social-auth-links -->

            <div class="row">
                <div class="col-xs-6">
                    <a class="btn bg-navy btn-block btn-flat text-center pull-right" asp-page="/Account/ForgotPassword">找回密码</a>
                </div>
                <div class="col-xs-6">
                    <a class="btn bg-navy btn-block btn-flat text-center pull-right" asp-page="/Account/Register">注册为新用户</a>
                </div>
            </div>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    <footer class="main-footer"style="margin:0; text-align:center">
        <!-- To the right -->
        @*<div class="pull-right hidden-xs">
            Colourful Flooring
        </div>*@
        <!-- Default to the left -->
        <strong>Copyright &copy; 2021 <a href="#">PinhuaMaster</a>.</strong> <a href="https://beian.miit.gov.cn/">浙ICP备17036224号</a>
    </footer>

    <!-- jQuery 3 -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/lib/AdminLTE-2.4.3/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });

            $('body').show()
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")

</body>
</html>

