@page "{Id?}"
@model PinhuaMaster.Pages.ProductionManagement.ProductionOrder.DeleteModel
@{
    ViewData["Title"] = "Delete";
    ViewBag.NoContentHeader = true;
}

<form method="post" id="deleteForm">
    <div class="box box-solid">
        <div class="box-header">
            <i class="fa fa-globe"></i>
            <h3 class="box-title"> 删除 - 生产订单</h3>
        </div>
        <div class="box-body">
            <div class="alert alert-danger">
                <h4><i class="icon fa fa-warning"></i> 警告！</h4>
                <p>您确定要删除生产订单 @Model.Id 吗？删除后无法恢复，慎重操作！</p>
                <br />
                <p>
                    <button type="button" class="btn btn-warning btn-flat" id="ok"><i class="fa fa-check"></i>&nbsp;确认删除</button>
                    <button type="button" class="btn btn-default btn-flat" id="cancel"><i class="fa fa-close"></i>&nbsp;放弃</button>
                </p>
            </div>
        </div>
    </div>
    <input asp-for="Id" type="hidden" />
</form>

@section Styles{ 
<style>
    body {
        font-size: 14px;
    }
</style>
}

@section Scripts{
    <script>
        $('#ok').on('click', function () {
            $('#deleteForm').submit()
        })

        $('#cancel').on('click', function () {
            location.href = '@Url.Page("Index")';
        })
    </script>
}