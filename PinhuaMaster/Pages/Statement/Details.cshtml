@{
    var workbook = new HSSFWorkbook();
    var sheet = workbook.CreateSheet("Statement");
    // Add header labels
    var rowIndex = 0;
    var row = sheet.CreateRow(rowIndex);
    row.CreateCell(0).SetCellValue("日期");
    row.CreateCell(1).SetCellValue("业务描述");
    row.CreateCell(2).SetCellValue("备注");
    row.CreateCell(3).SetCellValue("产品编号");
    row.CreateCell(4).SetCellValue("产品描述");
    row.CreateCell(5).SetCellValue("规格");
    row.CreateCell(6).SetCellValue("片数");
    row.CreateCell(7).SetCellValue("数量");
    row.CreateCell(8).SetCellValue("单位");
    row.CreateCell(9).SetCellValue("单价");
    row.CreateCell(10).SetCellValue("金额");
    rowIndex++;
    // Add data rows
    foreach (var data in Model.StatementData)
    {
        row = sheet.CreateRow(rowIndex);
        row.CreateCell(0).SetCellValue(data.OrderDate.Value);
        row.CreateCell(1).SetCellValue(data.MovementTypeDescription);
        row.CreateCell(2).SetCellValue(data.Remarks);
        row.CreateCell(3).SetCellValue(data.ItemId);
        row.CreateCell(4).SetCellValue(data.Description);
        row.CreateCell(5).SetCellValue(data.Specification);
        row.CreateCell(6).SetCellValue((double)(data.Qty ?? 0));
        row.CreateCell(7).SetCellValue((double)(data.UnitQty ?? 0));
        row.CreateCell(8).SetCellValue(data.Unit);
        row.CreateCell(9).SetCellValue((double)(data.Price ?? 0));
        row.CreateCell(10).SetCellValue((double)(data.Amount ?? 0));
        rowIndex++;
    }
